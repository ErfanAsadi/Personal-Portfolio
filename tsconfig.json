{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "$lib/*": ["./lib/*"],
      "$components/*": ["./components/*"],
      "$utils/*": ["./utils/*"],
      "$configs/*": ["./configs/*"],
      "$assets/*": ["./assets/*"],
      "$pages/*": ["./pages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
